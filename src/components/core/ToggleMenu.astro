---
import { Icon } from "astro-icon";

const {
  label = "Toggle Menu",
  class:
    className = "ml-1.5 text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 focus:outline-none rounded-lg text-sm p-2.5 inline-flex items-center transition",
  iconClass = "w-6 h-6",
  iconName = "tabler:menu",
} = Astro.props;
---

<button type="button" class={className} aria-label={label} data-aw-toggle-menu>
  <Icon name={iconName} class={iconClass} optimize={false} />
</button>
