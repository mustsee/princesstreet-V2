---
import { Icon } from "astro-icon";
---

<section class="relative">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="py-12 md:py-20">
      <div
        class="max-w-3xl mx-auto text-center p-6 rounded-md shadow-xl dark:shadow-none"
      >
        <h2
          class="text-4xl md:text-4xl font-bold leading-tighter tracking-tighter mb-4 font-heading"
        >
          <span>Book direct</span>
          <br class="block sm:hidden" /><span class="sm:whitespace-nowrap"
            >and save</span
          >
        </h2>
        <p class="text-xl text-gray-600 dark:text-slate-400">
          You'll always get the lowest price when you book direct with us.
          Guaranteed.
        </p>

        <div class="mt-6">
          <a
            class="btn btn-primary mb-4 sm:mb-0"
            href="https://github.com/onwidget/astrowind"
            target="_blank"
            rel="noopener"
          >
            BOOK NOW<Icon
              name="tabler:chevron-right"
              class="w-5 h-5 ml-1 -mr-1.5"
            />
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
