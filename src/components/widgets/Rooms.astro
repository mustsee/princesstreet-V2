---
import Room from "./Room.astro";
import { t } from "i18next";

const rooms = [
  {
    name: "Double rooms",
    alt: "A double room",
    src: "psh-double-rooms-min.jpeg",
    desc: t("rooms.db-rooms-description"),
  },
  {
    name: "Shared rooms",
    alt: "A dormitory",
    src: "psh-dormitory-1-min.jpeg",
    desc: t("rooms.shared-rooms-description"),
  },
  {
    name: "Private rooms",
    alt: "Another dormitory",
    src: "psh-dormitory-2-min.jpeg",
    desc: t("rooms.private-rooms-description"),
  },
];
---

<section class="px-4 py-16 max-w-md mx-auto md:max-w-6xl lg:py-20">
  <div class="flex flex-col mb-6 lg:justify-between lg:flex-row md:mb-8">
    <h2
      class="max-w-lg mb-2 text-3xl font-bold tracking-tight sm:text-4xl sm:leading-none lg:mb-5 group font-heading"
    >
      <span class="inline-block mb-1 sm:mb-4"
        >{t("rooms.title")}<br class="hidden md:block" />
      </span>
    </h2>

    <p class="text-gray-700 dark:text-slate-400 lg:text-sm lg:max-w-md">
      {t("rooms.general-description")}
    </p>
  </div>

  <div
    class="max-w-md md:max-w-6xl mx-auto grid gap-6 row-gap-5 md:grid-cols-2 lg:grid-cols-3 -mb-6"
  >
    {rooms.map((room) => <Room room={room} />)}
  </div>
</section>
